    			'KY',
    			'LA',
    			'MA',
    			'MD',
    			'ME',
    			'MI',
    			'MN',
    			'MO',
    			'MS',
    			'MT',
    			'NC',
    			'ND',
    			'NE',
    			'NH',
    			'NJ',
    			'NM',
    			'NV',
    			'NY',
    			'OH',
    			'OK',
    			'OR',
    			'PA',
    			'RI',
    			'SC',
    			'SD',
    			'TN',
    			'TX',
    			'UT',
    			'VA',
    			'VT',
    			'WA',
    			'WI',
    			'WV',
    			'WY'], 
    			:include_blank => false
  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :homepage
    = f.text_field :homepage
  .field
    = f.label :store_url
    = f.text_field :store_url
  .field
    = f.label :twitter
    @
    = f.text_field :twitter
  .field
    = f.label :facebook
    = f.text_field :facebook
  .field
    = f.label :myspace
    = f.text_field :myspace
  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :description
    = f.text_area :description  
    %h3 Members
    .field
      - @band.band_memberships.each do |member|
        - if member.user
          %li{:class => member.end_date && member.end_date.year < Time.new.year ? "old_member" : "current_member"}
            = member.user.full_name
            =member.start_date && member.start_date.year || 'ever'
            to 
            =member.end_date && member.end_date.year || 'now'
           

            (<a href="/deletemembership?band=#{@band.id}&amp;membership=#{member.id}">delete</a>)
    .field{:id => 0}
      %input{:type => "text", :id => "band_band_memberships_0", :name => "band[band_memberships[]]"}
      From <input type="text" name="from_date" size="4" /> to <input type="text" name="to_date" size="4" />
      -# When user just enters a name without selecting one, this will be blank.
      %input{:type => "hidden", :id => "band_band_memberships_value_0", :name => "band[band_memberships_value[]]", :value => ""}
      %div{:id => "search_results"}
        - render :partial => "search"
  .actions
    = f.submit 'Save'