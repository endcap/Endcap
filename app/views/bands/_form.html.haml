= form_for @band, :html => { :multipart => true} do |f|
  -if @band.errors.any?
    #error_explanation
      %h2= "#{pluralize(@band.errors.count, "error")} prohibited this band from being saved:"
      %ul
        - @band.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_year
    = f.text_field :start_year
  .field
    = f.label :end_year
    = f.text_field :end_year
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.select :state, ['AK',
    			'AL',
    			'AR',
    			'AZ',
    			'CA',
    			'CO',
    			'CT',
    			'DC',
    			'DE',
