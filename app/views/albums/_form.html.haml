= form_for @album, :html => { :multipart => true} do |f|
  -if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :band
    = f.select("band_id", Band.all.collect { |u| [ u.name, u.id ] }, {:include_blank => 'Select a Band'})
  .field
    = f.label :label
    = f.text_field :label
  .field
    = f.label :year
    = f.text_field :year
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :image
    = f.file_field :image
  .actions
    = f.submit 'Save'
