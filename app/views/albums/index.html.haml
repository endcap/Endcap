
#listing
  %h1 Albums

  %table
    %tr
      %th Name
      %th Band
      %th Year
      %th
      %th

    - @albums.each do |album|
      %tr
        %td= album.name
        -if album.band
          %td= album.band.name
        -else
          %td
        %td= album.year
        %td
          %img{ :src => album.image, :align => "right", :height => "45px", :width => "45px"}
        %td.links
          =link_to 'Show', album
          =link_to 'Edit', edit_album_path(album)
          =link_to 'Destroy', album, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Album', new_album_path
