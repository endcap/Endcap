
= form_for @user, :html => { :multipart => true} do |f|
  = errors(@user)
  
  #col1
    %p
      = f.label :first_name
      %br
      = f.text_field :first_name, :id => "first_name"

    %p
      = f.label :email
      %br
      = f.text_field :email, :id => "email"

    %p
      = f.label :password
      %br
      = f.password_field :password, :id => "password"
  
    %p
      = f.label :city
      %br
      = f.text_field :city, :id => "city"
 
    %p
      = f.label :image
      %br
      = f.file_field :image

    %p
      = f.label :instrument
      %br
      = f.text_field :instrument, :id => "instrument"
    %br
    %br
    %br
    %br
    %br
    %br
    %br
    %p
      = f.label :description
      %br
      = f.text_area :description, :id => "description"

    %br
    %br
    %p
      = f.submit 'Submit'
