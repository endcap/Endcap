= form_for @user, :html => { :multipart => true} do |f|
  = errors(@user)
  
  %p
    = f.label :first_name
    %br
    = f.text_field :first_name, :id => "first_name"
    
  %p
    = f.label :last_name
    %br
    = f.text_field :last_name, :id => "last_name"
  
  %p
    = f.label :email
    %br
    = f.text_field :email, :id => "email"
  
  %p
    = f.label :password
    %br
    = f.password_field :password, :id => "password"
  
  %p
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation, :id => "password_confirmation"
  
  %p
    = f.label :city
    %br
    = f.text_field :city, :id => "city"
	
  %p
    = f.label :state
    %br
    = f.text_field :state, :id => "state"
		
  %p
    = f.label :image
    %br
    = f.file_field :image

  %p
    = f.label :instrument
    %br
    = f.text_field :instrument, :id => "instrument"

  %p
    = f.label :description
    %br
    = f.text_area :description, :id => "description"

  %p
    = f.submit 'Submit'