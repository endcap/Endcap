    			'GA',
    			'HI',
    			'IA',
    			'ID',
    			'IL',
    			'IN',
    			'KS',
    			'KY',
    			'LA',
    			'MA',
    			'MD',
    			'ME',
    			'MI',
    			'MN',
    			'MO',
    			'MS',
    			'MT',
    			'NC',
    			'ND',
    			'NE',
    			'NH',
    			'NJ',
    			'NM',
    			'NV',
    			'NY',
    			'OH',
    			'OK',
    			'OR',
    			'PA',
    			'RI',
    			'SC',
    			'SD',
    			'TN',
    			'TX',
