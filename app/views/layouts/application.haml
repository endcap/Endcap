      })();
    <link href='http://fonts.googleapis.com/css?family=Reenie+Beanie&subset=latin' rel='stylesheet' type='text/css'>
  %body
    %header{:id => "#{params[:controller]}-header"}
      - if params[:controller] == 'index'
        .banner
          .line#navbox
            .content
              %div{:class => "unit size1of4"}
                %hgroup
                  %h1#logo
                    = link_to "Endcap Discover Music Local Bands Online, Endcap.info", root_url, :title => "Discover Music Local Bands Online, Endcap.info"
              %div{:class => "unit size3of4"}
                = link_to "Sign Up", signup_path, :id => "signupbutton", :class => "btn unit dark", :rel => "prefetch"
                %nav.mainnav
                  %ul
                    %li.about
                      = link_to "What's Endcap?", what_is_endcap_path
                    %li.browse
                      = link_to "Browse", artists_path
                    %li.support
                      = link_to "Talk to Us", talk_to_us_path
                    %li.blog
                      %a{:href => "http://endcap.tumblr.com", :title => "Endcap Blog"}
                    %li.search
                      %form{:id => "headersearch", :action => "/search"}
                        %input{:name => "q", :type => "text", :size => "40", :id => "keywords", :placeholder => "Search"}
                        %input{:type => "submit", :name => "submit", :value => "Search", :id => "submitquery"}
                  = link_to "Log In", login_path, :id => "login", :rel => "prefetch"
          %div{:class => "bannerbg", :id => "discover-local-music"}
            .bannercontent
              %div{:id => "featuredartist"}
                #video
                  <iframe src="http://player.vimeo.com/video/16874071" width="500" height="375" frameborder="0"></iframe>
              %h1.banner-text
                Discover Local Music
              %h2
                What artists and bands are in your local area? What band is that one musician in, now? Endcap can let you know. Explore local events, venues, bands, and music, and check out what’s going on in your local music scene. Sounds cool? Awesome!
              = link_to "Sign Up", signup_path, :class => "btn orange"
      - else
      .banner
        .line#navbox
          .content
            %div{:class => "unit size1of4"}
              %hgroup
                %h1#logo
                  = link_to "Endcap Discover Music Local Bands Online, Endcap.info", root_url, :title => "Discover Music Local Bands Online, Endcap.info"
            %div{:class => "unit size3of4"}
              = link_to "Sign Up", signup_path, :id => "signupbutton", :class => "btn unit dark", :rel => "prefetch"
              %nav.mainnav
                %ul
                  %li.about
                    = link_to "What's Endcap?", what_is_endcap_path
                  %li.browse
                    = link_to "Browse", artists_path
                  %li.support
                    = link_to "Talk to Us", talk_to_us_path
                  %li.blog
                    %a{:href => "http://endcap.tumblr.com", :title => "Endcap Blog"}
                  %li.search
                    %form{:id => "headersearch", :action => "/search"}
                      %input{:name => "q", :type => "text", :size => "40", :id => "keywords", :placeholder => "Search"}
                      %input{:type => "submit", :name => "submit", :value => "Search", :id => "submitquery"}
                = link_to "Log In", login_path, :id => "login", :rel => "prefetch"
        %div{:class => "bannerbg", :id => "discover-local-music"}
          .bannercontent
            %div{:id => "featuredartist"}
              #video
                <iframe src="http://player.vimeo.com/video/16874071" width="500" height="375" frameborder="0"></iframe>
            %h1.banner-text
              Discover Local Music
            %h2
              What artists and bands are in your local area? What band is that one musician in, now? Endcap can let you know. Explore local events, venues, bands, and music, and check out what’s going on in your local music scene. Sounds cool? Awesome!
            = link_to "Sign Up", signup_path, :class => "btn orange"              
    - if yield
      ~ yield
    %footer
      .content
        .line
          %div{:class => "unit size2of3"}
            #mainsponsor
          %div{:class => "unit size1of3"}
