!!! 5
%html{:id => "#{params[:controller]}", :xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{"http-equiv" => "content-type", :content => "text/html;charset=UTF-8"}
    - title = "#{@title} — " if @title
    %title= "#{title}#{CONFIG['name']}"
    = csrf_meta_tag
    = stylesheet_link_tag 'application', :cache => false
    
    %script{:type => "text/javascript"}
      //change this to true to enable testing mode
      var myfont_webfont_test = false;
      // change this to false if you're having trouble with WOFFs
      var woffEnabled = false;
      // uncomment this and set it to the path where your webfont directory is
      var customPath = " ";

    = javascript_include_tag "jquery-1.4.2.min", "rails", "application", "formalize", "MinyaNouvelle-Endcap", "PlanetBenson-Endcap", "MuseoSans", :cache => true

    %script{:type => "text/javascript", :src => "http://twitterjs.googlecode.com/svn/trunk/src/twitter.min.js"}
    /[if lt IE 9]
      %script{:type => "text/javascript", :src => "http://stan-js.googlecode.com/hg/version/0.1/stan.min.js"}
        == IE7_PNG_SUFFIX = '.png';
    %script{:type => "text/javascript"}
      var mpq = [];
      mpq.push(["init", "9dfd1580dbb139f7fbb845fddc489afd"]);
      (function() {
      var mp = document.createElement("script"); mp.type = "text/javascript"; mp.async = true;
      mp.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + "//api.mixpanel.com/site_media/js/api/mixpanel.js";
      var s = document.getElementsByTagName("script")[0]; s.parentNode.insertBefore(mp, s);
      })();
    <link href='http://fonts.googleapis.com/css?family=Reenie+Beanie&subset=latin' rel='stylesheet' type='text/css'>
  %body
    %header{:id => "#{params[:controller]}-header"}
      - if params[:controller] == 'index'
        #userbox
          .content
            %nav{:class => "usernav"}
              = link_to "Sign Up", signup_path, :id => "signupbutton", :class => "btn unit dark", :rel => "prefetch" 
              |
              = link_to "Login", login_path, :id => "loginbutton", :class => "btn unit dark", :rel => "prefetch"
        #navbox
          .content
            %nav{:class => "mainnav"}
              %ul
                %li.about
                  = link_to "What's Endcap?", what_is_endcap_path
                %li.browse
                  = link_to "Browse", artists_path
                %li.contribute
                  = link_to "Contribute", talk_to_us_path
            %div{:class => "logo"}
              %h1#logo
                = link_to "endcap", root_url, :title => "Discover Music Local Bands Online, Endcap.info"
              %h2#subhead
                = link_to "discover local music", root_url, :title => "Discover Local Music Bands Online, Endcap.info"
            %div{:class => "search"}
              %li.search
                %form{:id => "headersearch", :action => "/search"}
                  %input{:name => "q", :type => "text", :size => "30", :id => "keywords", :placeholder => "Search"}
                  %input{:type => "submit", :name => "submit", :value => "Search", :id => "submitquery"}
        %div{:class => "bannerbg", :id => "discover-local-music"}
          .content
            %div{:id => "featureleft"}
              #video
                <iframe src="http://player.vimeo.com/video/16874071" width="482" height="360" frameborder="0"></iframe>
            %div{:id => "featureright"}
              %div{:id => "discover"}
                %h1.banner-text
                  Discover Local Music
                %p
                  What artists and bands are in your local area?  What cool bands are playing around town tonight?  What band is that one musician in, now? Endcap can let you know.
                %p
                  Explore local events, venues, bands, and music, and check out what’s going on in your local music scene.  Sounds cool?  Awesome!
                = link_to "Check it out >>", signup_path, :class => "btn orange"
              %div{:id => "featuredartist"}
                %h1
                  Featured Artist:
                %p
                  The Flaming Lips
      - else
        #userbox
          .content
            %nav{:class => "usernav"}
              = link_to "Sign Up", signup_path, :id => "signupbutton", :class => "btn unit dark", :rel => "prefetch" 
              |
              = link_to "Login", login_path, :id => "loginbutton", :class => "btn unit dark", :rel => "prefetch"
        #navbox
          .content
            %nav{:class => "mainnav"}
              %ul
                %li.about
                  = link_to "What's Endcap?", what_is_endcap_path
                %li.browse
                  = link_to "Browse", artists_path
                %li.contribute
                  = link_to "Contribute", talk_to_us_path
            %div{:class => "logo"}
              %h1#logo
                = link_to "endcap", root_url, :title => "Discover Music Local Bands Online, Endcap.info"
              %h2#subhead
                = link_to "discover local music", root_url, :title => "Discover Local Music Bands Online, Endcap.info"
            %div{:class => "search"}
              %li.search
                %form{:id => "headersearch", :action => "/search"}
                  %input{:name => "q", :type => "text", :size => "30", :id => "keywords", :placeholder => "Search"}
                  %input{:type => "submit", :name => "submit", :value => "Search", :id => "submitquery"}
    - if yield
      ~ yield
    %footer
      %section#sponsors
        .content
          %article{:id => "mainsponsor"}
            %img{:src => "/images/idared-ad.png"}
          %article{:id => "sponsor"}
            %img{:src => "/images/bands-callout.png"}
      %section#footerinfo
        .content
          %article{:class => "footerbox", :id => "followbox"}
            %h1
              Follow
            %ul
              %li
                Twitter:
                %a{:href => "http://twitter.com/swendcap", :target => "_blank"}@swendcap
              %li
                Facebook:
                %a{:href => "http://www.facebook.com/pages/Tulsa-OK/EndCap/117352558328843", :target => "_blank"}facebook.com/endcap
          %article{:class => "footerbox", :id => "propsbox"}
            %h1
              Mad Props
            %p
              The Totally Badass Endcap Team is:
            %ul{:id => "teamlist"}
              %li
                TJ Clark
              %li
                Jon Evans
              %li
                Carlos Moreno
              %li
                Adam Brown
              %li
                Terry Gamel
              %li
                John Jackson
              %li
                Daniel Hampton
          %article{:class => "footerbox", :id => "bigups"}
            %h1
              Big Ups
            %p
              StartupWeekend Tulsa, the Kauffman Foundation and the Global Startup Battle
            %p
              Scott Phillips, Isocentric Networks &amp; all the local StartupWeekend Tulsa sponsors
            %p
              All the awesome developer teams &amp; other peeps who participated in this event with us in Tulsa, and all over the world.
