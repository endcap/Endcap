= form_for @venue do |f|
  -if @venue.errors.any?
    #error_explanation
      %h2= "#{pluralize(@venue.errors.count, "error")} prohibited this venue from being saved:"
      %ul
        - @venue.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :Address
    = f.text_field :location
  .field
    = f.label :hours
    = f.text_field :hours
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :homepage
    = f.text_field :homepage
  .actions
    = f.submit 'Save'
